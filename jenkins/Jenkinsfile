/* groovylint-disable CompileStatic, DuplicateStringLiteral, LineLength */
pipeline {
    agent any
    environment {
        //ANSIBLE_VAULT_PASSWORD_FILE = credentials('ANSIBLE_VAULT_PASSWORD')
        //GOOGLE_APPLICATION_CREDENTIALS = credentials('gcp-service-account')
        WORKING_DIR = "./ansible"
    }
    stages {
        stage('Ansible') {
            steps {
                echo 'Ansible'
                dir("${WORKING_DIR }") {
                        withCredentials([file(credentialsId: 'wushatneen', variable: 'ANSIBLE_VAULT_PASSWORD')]) {
                        sh 'ansible-playbook playbook.yml -i inventory.ini --vault-password-file ${	ANSIBLE_VAULT_PASSWORD}'
                        }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}